# 서버 포트 설정
PORT=5000
HOST=0.0.0.0

# 앱 기본 URL (메일 링크 생성용, APP_URL 또는 NEXT_PUBLIC_APP_URL 사용)
APP_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=

# Drizzle에서 사용할 데이터베이스 연결 문자열 (PostgreSQL)
# 예) DATABASE_URL="postgresql://user:pass@host:5432/db?sslmode=require"
DATABASE_URL=

# SMTP 암호화를 위한 비밀 키 (AES-256-GCM)
# 개발에서는 임시 값으로 사용 가능하지만, 운영 환경에서는 반드시 별도의 안전한 값을 지정하세요.
SMTP_SECRET=

# SMTP 비밀번호 암호화 키 회전 스크립트에서 사용하는 값
SMTP_SECRET_OLD=
SMTP_SECRET_NEW=

# 테스트 메일 발송용 SMTP 설정
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
# true/false (465 포트 사용 시 기본적으로 true 권장)
SMTP_SECURE=false
# 개발 환경에서 자체 서명 인증서를 허용할 때 true
SMTP_ALLOW_INVALID_TLS=false

# SMTP 테스트 시 허용되는 수신자 도메인 목록(콤마 구분)
SMTP_TEST_ALLOWED_DOMAINS=evriz.co.kr
# 메타데이터 엔드포인트 접근 차단 여부
SSRF_BLOCK_METADATA=true

# 보고서 생성용 회사 정보
# 회사명 (필수)
REPORT_COMPANY_NAME=
# 회사 로고 이미지 경로 (필수, 서버 로컬 경로)
# 예) attached_assets/company_logo.png
REPORT_COMPANY_LOGO_PATH=
