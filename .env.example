# 서버 포트 설정
PORT=5000
HOST=0.0.0.0

# 앱 기본 URL (메일 링크 생성용, APP_BASE_URL 우선)
APP_BASE_URL=http://localhost:3000
# APP_URL=
# NEXT_PUBLIC_APP_URL=

# EVRIZ OIDC 설정
OIDC_ISSUER_URL=https://auth.evriz.co.kr
OIDC_CLIENT_ID=phishsense-app
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=https://app.phishsense.cloud/oidc/callback
OIDC_SCOPE=openid profile email offline_access
# true/false (true면 prompt=consent 추가)
OIDC_REQUIRE_CONSENT=false

# 인증 세션 설정
AUTH_SESSION_COOKIE_NAME=ps_session
AUTH_TRANSACTION_COOKIE_NAME=ps_oidc_txn
AUTH_SESSION_SECRET=
AUTH_TOKEN_ENC_KEY=
AUTH_SESSION_IDLE_TTL_SEC=28800
AUTH_SESSION_ABS_TTL_SEC=604800

# 로컬 인증 우회 설정
# AUTH_DEV_BYPASS=true일 때만 인증 우회가 동작합니다.
# 실제 개발용 값은 .env에만 기록하세요. .env 파일은 .gitignore에 포함되어 커밋되지 않습니다.
AUTH_DEV_BYPASS=false
AUTH_DEV_USER_SUB=dev-local-user
AUTH_DEV_USER_EMAIL=dev.user@local
AUTH_DEV_USER_NAME=개발 사용자

# Drizzle에서 사용할 데이터베이스 연결 문자열 (PostgreSQL)
# 예) DATABASE_URL="postgresql://user:pass@host:5432/db?sslmode=require"
DATABASE_URL=

# 기본 시드 데이터 자동 생성 여부 (개발용)
# true일 때만 템플릿/대상/프로젝트 기본값을 시드합니다.
SEED_DEFAULTS=false

# SMTP 암호화를 위한 비밀 키 (AES-256-GCM)
# 개발에서는 임시 값으로 사용 가능하지만, 운영 환경에서는 반드시 별도의 안전한 값을 지정하세요.
SMTP_SECRET=

# SMTP 비밀번호 암호화 키 회전 스크립트에서 사용하는 값
SMTP_SECRET_OLD=
SMTP_SECRET_NEW=

# 테스트 메일 발송용 SMTP 설정
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
# true/false (465 포트 사용 시 기본적으로 true 권장)
SMTP_SECURE=false
# 개발 환경에서 자체 서명 인증서를 허용할 때 true
SMTP_ALLOW_INVALID_TLS=false

# 실발송 기본 발신 정보
MAIL_FROM_NAME=
MAIL_FROM_EMAIL=

# SMTP 테스트 시 허용되는 수신자 도메인 목록(콤마 구분)
SMTP_TEST_ALLOWED_DOMAINS=evriz.co.kr
# 메타데이터 엔드포인트 접근 차단 여부
SSRF_BLOCK_METADATA=true

# 보고서 생성용 회사 정보
# 회사명 (필수)
REPORT_COMPANY_NAME=
# 회사 로고 이미지 경로 (필수, 서버 로컬 경로)
# 예) attached_assets/company_logo.png
REPORT_COMPANY_LOGO_PATH=

# 대외비 로고 이미지 경로 (선택)
# 미설정 시 attached_assets/confidential_logo.png 사용
REPORT_CONFIDENTIAL_LOGO_PATH=

# 보고서 차트용 폰트 경로(선택)
# 한글 라벨이 깨질 경우 지정하세요.
# 예) /usr/share/fonts/truetype/nanum/NanumGothic.ttf
REPORT_MPL_FONT_PATH=
